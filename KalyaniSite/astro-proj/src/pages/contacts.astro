
---
import MainLayout from "../layouts/MainLayout.astro";
---
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
<MainLayout title="Contacts">
   <!-- Link to the google form -->
   <h1 class="p-5 d-flex justify-content-center">Contact Us</h1>
   <div class="container" style="margin-top: 5px">
      <div class="row">
         <div id="contact" class="col-sm-6 bg-black">
            <h1 class="container text-white">Collaboration Form</h1>
            <iframe src="https://docs.google.com/forms/d/e/1FAIpQLScTXJV5qpw1MW0t3E6Qx0gcV8CB6yD9iZvOhKY__Q9dJCFyDw/viewform?embedded=true" width="640" height="720" frameborder="0" marginheight="0" marginwidth="0">Loading…</iframe>
         </div>
         <div id="mailing" class="col-sm-6 bg-black">
            <span class="text-white">
               <h1>Mailing Form</h1>
               <p>Note: this form will only work for TCNJ students</p>
            </span>
            <iframe src="https://docs.google.com/forms/d/e/1FAIpQLSdsMh5JRZO31X2Givp8R5UfAlXIhFz7mokEWBbPlnu6nLctiw/viewform?embedded=true" width="640" height="857" frameborder="0" marginheight="0" marginwidth="0">Loading…</iframe>         </div>
      </div>
   </div>
</MainLayout>